								"fontSrc": "/static/yticon.ttf",//设置
								"text": "\ue60f",
								"fontSize": "24",
								"color": "#303133",
								"width": "46px",
								"background": "rgba(0,0,0,0)"
							},
							{
								"fontSrc": "/static/yticon.ttf",//通知
								"text": "\ue744",
								"fontSize": "28",
								"color": "#303133",
								"background": "rgba(0,0,0,0)",
								"redDot": true
							}
						]
					}
				}
			}
		},
		{
			"path": "pages/cart/cart",
			"style": {
				"navigationBarTitleText": "购物车"
